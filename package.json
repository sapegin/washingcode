{
  "name": "washingcode",
  "private": true,
  "author": {
    "name": "Artem Sapegin",
    "url": "http://sapegin.me"
  },
  "homepage": "https://github.com/sapegin/washingcode",
  "repository": "sapegin/washingcode",
  "license": "CC BY-NC-ND 4.0",
  "engines": {
    "node": ">=8.6"
  },
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "lint": "npm run lint:js",
    "lint:js": "eslint . --cache --fix",
    "lint:text": "textlint \"manuscript/**/*.md\"",
    "lint:text:fix": "npm run lint -- --fix",
    "format": "prettier --write \"**/*.{js,md}\"",
    "pretest": "npm run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "posttest": "npm run format"
  },
  "keywords": [],
  "devDependencies": {
    "eslint": "^6.7.2",
    "eslint-config-tamia": "^7.1.1",
    "husky": "^2.4.1",
    "jest": "^24.9.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "remark": "^11.0.2",
    "textlint": "^11.2.5",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-apostrophe": "^1.0.0",
    "textlint-rule-common-misspellings": "^1.0.1",
    "textlint-rule-diacritics": "^1.0.0",
    "textlint-rule-no-dead-link": "^4.4.2",
    "textlint-rule-stop-words": "^1.0.14",
    "textlint-rule-terminology": "^1.1.30",
    "textlint-rule-write-good": "^1.6.2",
    "unist-util-visit": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "lodash": "^4.17.15"
  }
}
